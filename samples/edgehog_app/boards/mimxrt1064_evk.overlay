/delete-node/ &storage_partition;

/delete-node/ &slot0_partition;
/delete-node/ &slot1_partition;

&is25wp064 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		storage_partition: partition@0 {
			label = "storage";
			reg = <0x00000000 DT_SIZE_M(4)>;
		};

		/*
		* Reserve the final 16 KiB for edgehog partition
		*/
		edgehog_partition: partition@400000 {
			label = "edgehog_storage";
			reg = <0x00400000 DT_SIZE_K(16)>;
		};

		astarte_partition: partition@404000 {
			label = "astarte";
			reg = <0x00404000 DT_SIZE_M(2)>;
		};
	};
};


&w25q32jvwj0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x00020000 DT_SIZE_K(1976)>;
		};

		slot1_partition: partition@20E000 {
			label = "image-1";
			reg = <0x0020E000 DT_SIZE_K(1976)>;
		};
	};
};

/ {
	chosen {
		zephyr,settings-partition = &edgehog_partition;
	};
};
